<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/station_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/station_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
        android:id="@+id/feature_separator_view"
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/feature_lift_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_elevator"
        android:tint="@color/colorPrimaryLight"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/feature_bus_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_directions_bus_black_24dp"
        android:tint="@color/colorPrimaryLight"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/feature_boat_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_directions_boat_black_24dp"
        android:tint="@color/colorPrimaryLight"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/feature_train_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_train_black_24dp"
        android:tint="@color/colorPrimaryLight"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/feature_airport_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_local_airport_black_24dp"
        android:tint="@color/colorPrimaryLight"
        android:visibility="gone" />
</LinearLayout>